{
  "name": "nestjs-hexagonal-architecture-example",
  "version": "1.0.0",
  "description": "Example of how to create a NestJS service using hexagonal architecture",
  "author": "alberthernandezdev@gmail.com",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/AlbertHernandez/nestjs-hexagonal-architecture-example/issues"
  },
  "homepage": "https://github.com/AlbertHernandez/nestjs-hexagonal-architecture-example#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AlbertHernandez/nestjs-hexagonal-architecture-example.git"
  },
  "keywords": [
    "typescript",
    "nestjs",
    "hexagonal architecture"
  ],
  "engines": {
    "node": ">=18.x",
    "npm": ">=9.x"
  },
  "main": "dist/main.js",
  "scripts": {
    "build": "npm run build:clean && nest build --path tsconfig.prod.json",
    "start": "node dist/main.js",
    "dev": "tsnd -r tsconfig-paths/register --inspect=0.0.0.0:9229 --respawn src/main.ts | pino-pretty --messageKey message",
    "test": "rimraf coverage .nyc_output && concurrently 'npm:test:unit' 'npm:test:e2e' && npm run calculate-global-test-coverage",
    "test:unit": "vitest run --coverage --config vitest.config.unit.ts",
    "test:e2e": "vitest run --coverage --config ./vitest.config.e2e.ts",
    "calculate-global-test-coverage": "ts-node scripts/calculate-global-test-coverage.ts",
    "prepare": "husky",
    "lint": "eslint --ignore-path .gitignore . --ext .js,.ts",
    "lint:fix": "npm run lint -- --fix",
    "build:clean": "rimraf dist; exit 0"
  },
  "dependencies": {
    "@nestjs/cli": "^10.3.2",
    "@nestjs/common": "^10.3.4",
    "@nestjs/config": "^3.2.0",
    "@nestjs/core": "^10.3.4",
    "@nestjs/platform-fastify": "^10.3.4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "fastify": "^4.26.2",
    "pino": "^8.19.0",
    "reflect-metadata": "^0.2.1",
    "rxjs": "^7.8.1",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.1",
    "@commitlint/config-conventional": "^19.1.0",
    "@commitlint/types": "^19.0.3",
    "@nestjs/schematics": "^10.1.1",
    "@nestjs/testing": "^10.3.4",
    "@swc/cli": "^0.3.10",
    "@swc/core": "^1.4.8",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.30",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^9.0.8",
    "@typescript-eslint/eslint-plugin": "^7.3.1",
    "@typescript-eslint/parser": "^7.3.1",
    "@vitest/coverage-istanbul": "^1.3.1",
    "concurrently": "^8.2.2",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-simple-import-sort": "^12.0.0",
    "eslint-plugin-unicorn": "^51.0.1",
    "eslint-plugin-vitest": "^0.3.26",
    "fs-extra": "^11.2.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "nock": "^13.5.4",
    "nyc": "^15.1.0",
    "pino-pretty": "^11.0.0",
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "source-map-support": "^0.5.21",
    "supertest": "^6.3.4",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.4.3",
    "unplugin-swc": "^1.4.4",
    "vite": "^5.2.2",
    "vitest": "^1.3.1",
    "vitest-mock-extended": "^1.3.1"
  }
}
